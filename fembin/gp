#echo $gpversion $gpmajor

title="Timeseries"
type="monochrome"
orientation="landscape"
terminal="postscript"
using="using 1:2"
grid="NO"
xlog="NO"
ylog="NO"
date="NO"
offset=""
date_format="%Y-%m-%d::%H:%M:%S"	#internal date format for gnuplot
#xformat="%Y-%m-%d"			#how date is written in plot
